<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="300.0" minWidth="200.0" prefHeight="400.0" prefWidth="300.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.bafkit.cloud.storage.client.controllers.RegistrationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
      <Hyperlink fx:id="back" onAction="#back" alignment="TOP_LEFT" prefHeight="23.0" prefWidth="74.0" text="&lt;- Back">
         <VBox.margin>
            <Insets right="200.0" />
         </VBox.margin>
      </Hyperlink>
        <HBox alignment="CENTER" prefHeight="28.0" prefWidth="200.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="101.0" text="Registration" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
            <children>
                <TextField fx:id="login" alignment="CENTER" promptText="Login">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="password" alignment="CENTER" promptText="Password">
                    <VBox.margin>
                        <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
                    </VBox.margin>
                </PasswordField>
            <PasswordField fx:id="repeat_password" alignment="CENTER" promptText="Repeat password">
               <VBox.margin>
                  <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
               </VBox.margin>
            </PasswordField>
            </children>
        </VBox>
        <Button fx:id="buttonSubmit" mnemonicParsing="false" onAction="#clickSubmit" prefWidth="80.0" text="Submit" textAlignment="CENTER" VBox.vgrow="ALWAYS" />
    </children>

</VBox>
